<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/login_page">

    <fragment
        android:id="@+id/login_page"
        android:name="com.example.student_app.Login_page"
        android:label="fragment_login_page"
        tools:layout="@layout/fragment_login_page" >
        <action
            android:id="@+id/action_login_page_to_register_page"
            app:destination="@id/register_page" />
    </fragment>
    <fragment
        android:id="@+id/register_page"
        android:name="com.example.student_app.register_page"
        android:label="fragment_register_page"
        tools:layout="@layout/fragment_register_page" >
        <action
            android:id="@+id/action_register_page_to_home_page"
            app:destination="@id/home_page" />
    </fragment>
    <fragment
        android:id="@+id/home_page"
        android:name="com.example.student_app.home_page"
        android:label="fragment_home_page"
        tools:layout="@layout/fragment_home_page" />
</navigation>